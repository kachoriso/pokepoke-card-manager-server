{
    "version": 2,
    "builds": [
      {
        "src": "src/main.ts",
        "use": "@vercel/node",
        "config": {
          "includeFiles": ["prisma/schema.prisma"],
          "distDir": "public"
        }
      }
    ],
    "rewrites": [
      {
        "source": "/(.*)",
        "destination": "src/main.ts"
      }
    ],
    "headers": [
      {
        "source": "/(.*)",
        "headers": [
          { "key": "Cache-Control", "value": "no-store, no-cache, must-revalidate, proxy-revalidate" },
          { "key": "Pragma", "value": "no-cache" },
          { "key": "Expires", "value": "0" }
        ]
      }
    ]
  }